
.forms_page
  %h2= "New Player Registration"

  = form_for(resource, :as => resource_name, :url => registration_path(resource_name), :validate => true) do |f|
    = devise_error_messages!
    %ul.full_column_form
      %li.element
        = f.label "Player Name"
        = f.text_field :name
      %li.element
        = f.label "Email Address"
        = f.text_field :email
      %li.element
        = f.label "Password"
        = f.password_field :password
      %li.element
        = f.label "Password Confirmation"
        = f.password_field :password_confirmation
      %li.element
        = f.label "Country"
        = f.select :country, Countries.map{|c| [c.first, c.first] }.sort{|a, b| a.first <=> b.first }, {}, :class => "rtl"
      %li
        = f.submit "Sign Up", :class => "button"
      .clearer

  %h2= "Or Login using your GMail Account"
  = form_for('user', :as => 'user', :url => session_path('user'), :html => { :id => "google_login_form" }) do |f|
    %ul.full_column_form
      = hidden_field_tag 'user[identity_url]', 'https://www.google.com/accounts/o8/id'
      %li
        %img{:src => "/images/gmail.jpg", :style => "float: left"}
        = f.submit 'Sign In', :class => "button", :style => "margin-left: 20px; margin-top: 20px;"

